---
type Props = {
	id?: string;
	title: string;
	dark?: boolean;
	maw?: string;
};

const { title, id, dark, maw } = Astro.props as Props;
---

<style lang='scss'>
	.section-root {
		display: flex;
		justify-content: center;
		background-color: var(--bg-color);
		padding: 0 1rem;

		&[data-dark] {
			background-color: var(--bg-color-dark);
		}
	}

	.section-inner {
		max-width: 900px;
		padding-top: 5rem;
		padding-bottom: 5rem;

		@media only screen and (max-width: 768px) {
			padding-top: 2.5rem;
			padding-bottom: 2.5rem;
		}
	}

	.section-title {
		font-size: 3.5rem;
		font-weight: 900;
		line-height: 1;
		margin: 0;
		padding: 0;
		text-align: center;
		color: var(--text-color);
		margin-bottom: var(--spacing-xl);

		@media only screen and (max-width: 768px) {
			font-size: 2.25rem;
		}
	}
</style>
<div class='section-root' data-dark={dark}>
	<section class='section-inner' style={{ maxWidth: maw }}>
		<h1 id={id ?? title} class='section-title'>{title}</h1>
		<slot />
	</section>
</div>
