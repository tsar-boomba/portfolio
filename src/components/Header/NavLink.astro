---
export interface Props {
	href: string;
	label: string;
}

const { href, label } = Astro.props as Props;
const isActive =
	(href !== '/' && Astro.url.pathname.startsWith(href)) ||
	(href === '/' && Astro.url.pathname === '/');
---

<style lang='scss'>
	.root {
		padding: var(--spacing-md) var(--spacing-xl);
		font-weight: 500;
		color: var(--text-color);
		text-decoration: none;
		border-radius: var(--radius);

		&:hover {
			background-color: color-mix(in srgb, var(--link-color), transparent 92%);
		}

		&:active {
			background-color: color-mix(in srgb, var(--link-color), transparent 88%);
		}
	}
</style>
<a data-active={isActive || undefined} href={href} class='root'>{label}</a>
